{
  "name": "node-api-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:dtonys/node-api-boilerplate.git",
  "author": "dtonys@gmail.com <dtonys@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development babel-watch ./src/server.js",
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.js",
    "start": "cross-env NODE_ENV=production forever start --uid node-api --append ./build/server.js",
    "stop": "forever stop node-api",
    "lint-js": "eslint -c ./.eslintrc.js ./src",
    "console": "babel-node ./src/console.js",
    "test": "cross-env NODE_ENV=development jest --config ./jest.config.js",
    "test:watch": "cross-env NODE_ENV=development jest --config ./jest.config.js --watch"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-jest": "^22.0.4",
    "babel-loader": "^7.1.2",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-1": "^6.24.1",
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "cross-env": "^5.1.1",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "forever": "^0.15.3",
    "get-port": "^3.2.0",
    "helmet": "^3.9.0",
    "json-loader": "^0.5.7",
    "lodash": "^4.17.4",
    "mongoose": "^5.0.0-rc1",
    "simple-encryptor": "^1.1.1",
    "webpack": "^3.10.0",
    "webpack-node-externals": "^1.6.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-watch": "^2.0.7",
    "eslint": "^4.13.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-import-resolver-node": "^0.3.1",
    "eslint-plugin-import": "^2.8.0",
    "jest": "^22.0.4",
    "superagent": "^3.8.2"
  }
}
